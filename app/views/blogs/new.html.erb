<div class="contents row">
  <div class="container">
  <%= form_tag('/blogs', method: :post) do %>
    <h3>
      投稿する
    </h3>
    <input type="text" name="nickname" placeholder="名前" autofocus="true">
    <input type="text" name="date" placeholder="日付" autofocus="true">
    <input type="text" name="title" placeholder="タイトル" autofocus="true">
    <input type="text" name="image" placeholder="Image URL" autofocus="true">
    <input type="text" name="contents" placeholder="目次" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"></textarea>
    <input type="submit" value="SENT">
  <% end %>
  </div>
</div>